{
  "extends": [
    "wesbos",
    "eslint:recommended"
  ],
  "rules": {
    "no-console": 1,
    "no-unused-vars": 1,
    "global-require": 0,
    "import/no-extraneous-dependencies": 0,
    "no-use-before-define": 0,
    "prettier/prettier": [
      "error",
      {
        "trailingComma": "es5",
        "singleQuote": true,
        "printWidth": 120,
        "tabWidth": 4,
        "arrowParens": "avoid"
      }
    ]
  }
}
